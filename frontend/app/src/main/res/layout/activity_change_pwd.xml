<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".ChangePwdActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/addPetTitle"
            style="@style/Text.NormalStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="비밀번호 변경"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="60dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/currentPwd"
            style="@style/Text.NormalStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="  현재 비밀번호"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_rectangle"
            android:inputType="text" />

        <EditText
            android:id="@+id/changedPwd"
            style="@style/Text.NormalStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="  변경할 비밀번호"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_rectangle"
            android:inputType="text" />

        <EditText
            android:id="@+id/changedPwdChk"
            style="@style/Text.NormalStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="  변경할 비밀번호 확인"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edittext_rectangle"
            android:inputType="text" />

        <TextView
            android:id="@+id/messageChk01"
            style="@style/Text.NormalStyle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="  비밀번호가 일치하지 않습니다."
            android:layout_marginBottom="8dp"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Text.BoldStyle"
            android:backgroundTint="@color/btn_gray"
            android:onClick="onclickPwdChk01"
            android:text="비밀번호 변경"
            android:textColor="@color/black"
            />
    </LinearLayout>








</LinearLayout>